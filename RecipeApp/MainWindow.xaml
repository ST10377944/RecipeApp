<Window x:Class="RecipeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Manager" Height="600" Width="800">
    <Grid Background="#FFE00BB1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        
      
        <StackPanel Grid.Column="0" Margin="10">
            <Button Name="AddRecipeButton" Content="Add New Recipe" Click="AddRecipeButton_Click" Margin="0,0,0,10" Background="#FF950BD8" FontWeight="Bold" />
            <Button Name="ViewRecipesButton" Content="View Recipes" Click="ViewRecipesButton_Click" Margin="0,0,0,10" Background="#FF950BD8" FontWeight="Bold" />
            <Button Name="ClearRecipesButton" Content="Clear All Recipes" Click="ClearRecipesButton_Click" Margin="0,0,0,10" Background="#FF950BD8" FontWeight="Bold"/>
            <Button Name="ScaleRecipeButton" Content="Scale a Recipe" Click="ScaleRecipeButton_Click" Margin="0,0,0,10" Background="#FF950BD8" FontWeight="Bold"/>
            <Button Name="ExitButton" Content="Exit" Click="ExitButton_Click" Background="#FF950BD8" FontWeight="Bold" />
        </StackPanel>
       
        <ContentControl Name="ContentArea" Grid.Column="1" Margin="0,0,20,20" />
    </Grid>
</Window>
